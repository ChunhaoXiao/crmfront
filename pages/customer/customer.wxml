<view>
  <view class="thread-header">
    <text>取消</text>
    <text>新建客户</text>
    <!-- <text bindtap="submitData">创建</text> -->
  </view>
  <view class="form">
    <view class="textinput-item">
      <text-input text="客户名称" bind:getInput="getValue" defaultvalue="{{postData.name?postData.name:''}}" data-name="name"/>
    </view>
    <select-item text="客户来源" bindtap="showOptions" data-type="thread_from" data-name="source" selected_text="{{selected.source.name}}"/>
    <select-item text="客户行业" bindtap="showOptions" data-name="industry" data-type="thread_industry" selected_text="{{selected.industry.name}}"/>
    <select-item text="客户级别" bindtap="showOptions" data-name="customer_level" data-type="thread_level" selected_text="{{selected.customer_level.name}}"/>
    <text-input text="地址" bind:getInput="getValue" data-name="address" defaultvalue="{{postData.address}}"></text-input>
    <text-input text="网址" bind:getInput="getValue" data-name="website" defaultvalue="{{postData.mobile}}"></text-input>
    <text-input text="备注" bind:getInput="getValue" data-name="note" defaultvalue="{{postData.note}}"></text-input>
    <view><button bindtap="sendData">确定</button></view>
  </view>
</view>

