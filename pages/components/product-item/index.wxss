.product-container {
  display: flex;
  align-items: center;
  padding: 10rpx;
}

.image {
  width: 100rpx;
  height: 100rpx;
}

.content {
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 10rpx;
  word-wrap: break-word;
  align-self: flex-start;
}
.thumb {
  flex:1;
}
.btn {
  flex:1;
  border-radius: 40rpx;
  border: 1rpx solid grey;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  padding: 5rpx;
}
.description {
  color: grey;
}