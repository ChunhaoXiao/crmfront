.product-container {
  display: flex;
  padding: 10rpx;
  align-items:center;
}

.image {
  width: 96rpx;
  height: 96rpx;
}

.content {
  
  margin-right: 10rpx;
  word-wrap: break-word;
  margin-left: 20rpx;
  padding: 0;
}

.btn {
  width: 160rpx;
  border-radius: 40rpx;
  border: 1rpx solid #999999;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  padding: 5rpx;
  margin-left: auto;
  color: #333333;
}
.description {
  color: grey;
  font-size: 28rpx;
}

.product-name {
  font-weight: 600;
  color: #333333;
}